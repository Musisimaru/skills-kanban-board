{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./src/",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
